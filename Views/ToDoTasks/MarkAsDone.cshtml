@model ToDoApplication.BLL.DTO.ToDoTasks

@{
    ViewData["Title"] = "MarkAsDone";
}

<h1>Shenoje si te perfunduar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MarkAsDone">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <input type="checkbox" name="Completed" value="false" onchange="this.value=true " /> @Html.DisplayNameFor(model => model.IsCompleted)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
