@model ToDoApplication.BLL.DTO.ToDoTasks

@{
    ViewData["Title"] = "AddUserComment";
}

<h1>Shto koment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserComment" class="control-label"></label>
                <input asp-for="UserComment" class="form-control" />
                <span asp-validation-for="UserComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
